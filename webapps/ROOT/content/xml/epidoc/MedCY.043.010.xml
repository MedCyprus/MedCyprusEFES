                    <lb n="4"/><hi rend="ligature">τ<choice><orig>ο</orig><reg>ὸ</reg></choice></hi>ν <w lemma="λαός">λ<del rend="erasure">α</del>α
                    <lb n="5" break="no"/><choice><orig>ὸ</orig><reg>ό</reg></choice>ν</w> <w lemma="σύ">σου</w> 
                    <lb n="6"/><w><choice><sic>κ<choice><orig>ε</orig><reg>ὲ</reg></choice></sic><corr>καὶ</corr></choice></w> <w lemma="εὐλογῶ"><choice><sic><expan><abbr>ε<choice><orig>ὑ</orig><reg>ὐ</reg></choice>λόγι</abbr><ex>σον</ex></expan></sic><corr>εὐλόγησον</corr></choice></w>
