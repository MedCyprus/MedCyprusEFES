                    <lb n="3"/>  <w lemma="χείρ">χε<choice><orig>ί</orig><reg>ῖ</reg></choice>ρ<hi rend="ligature">άν</hi></w> <w lemma="σύ">σου</w> <choice><orig>ε</orig><reg>ἐ</reg></choice>πὶ τ<choice><orig>ο</orig><reg>ὸ</reg></choice> <w lemma="παιδάριον">παι
