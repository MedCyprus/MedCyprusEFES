            <div type="edition" xml:space="preserve" xml:lang="grc">
                <ab>
                         <lb n="1"/><persName type="divine" key="JesusChrist"><name nymRef="#Ἰησοῦς" type="forename"><expan><abbr rend="supraline"><choice><orig>Ι</orig><reg>Ἰ</reg></choice></abbr><ex>ησοῦ</ex><abbr rend="supraline">ς</abbr></expan> <milestone unit="column"/><expan><abbr rend="supraline">Χ</abbr><ex>ριστὸ</ex><abbr rend="supraline">ς</abbr></expan></name>
                       <lb n="2"/><persName type="divine" key="SonOfGod"><expan><abbr rend="supraline"><hi rend="ligature">Υ<choice><orig>ι</orig><reg>ἱ</reg></choice></hi></abbr><ex>ὸ</ex><abbr rend="supraline">ς</abbr></expan> <milestone unit="column"/><expan><abbr rend="supraline">Θ</abbr><ex>εο</ex><abbr rend="supraline"><choice><orig>υ</orig><reg>ῦ</reg></choice></abbr></expan></persName></persName>
                    <lb n="3"/><w lemma="νικῶ"><hi rend="supraline">Νι</hi> <milestone unit="column" break="no"/><hi rend="supraline">κ<choice><orig>α</orig><reg>ᾷ</reg></choice></hi></w>
                    <lb n="4"/><w lemma="εὕρεμα"><expan><abbr rend="supraline">Ε</abbr><ex>ὕρεμα</ex></expan></w> <w lemma="δίδωμι"><expan><abbr rend="supraline"><choice><orig>ε</orig><reg>ἐ</reg></choice></abbr><ex>δόθη</ex></expan></w>
      <milestone unit="column"/> <expan><abbr rend="supraline"><choice><orig>ε</orig><reg>ἐ</reg></choice></abbr><ex>κ Θεοῦ <!--<persName type="divine" key="God"><name nymRef="#Θεός">Θεοῦ</name></persName>--></ex></expan> <persName type="sacred" key="Helena"><name type="forename" nymRef="#Ἑλένη"></name><expan><abbr rend="supraline"><choice><orig>Ε</orig><reg>Ἑ</reg></choice></abbr><ex>λένῃ/ης</ex></expan></persName>                  
                </ab>
