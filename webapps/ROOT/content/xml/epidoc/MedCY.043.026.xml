                    <lb n="2"/><choice><orig>Η</orig><reg>Ἡ</reg></choice> <addName type="epithet" key="Eleousa"><choice><orig>Ε</orig><reg>Ἐ</reg></choice>λε <milestone unit="column" n="right"/>οῦσα </addName>         
                 </ab>
